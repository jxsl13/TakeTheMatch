<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:visibility="visible">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewMatchesLeft"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center" />

    <TextView
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewYouDrew"
        android:layout_below="@+id/textViewMatchesLeft"
        android:layout_marginTop="@dimen/jxsl13_sixteendp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewYourOpponentDrew"
        android:layout_below="@+id/textViewYouDrew"
        android:layout_alignLeft="@+id/textViewYouDrew"
        android:layout_alignStart="@+id/textViewYouDrew"
        android:layout_marginTop="@dimen/jxsl13_sixteendp"
        android:gravity="center"
        android:layout_alignRight="@+id/textViewGithubLink"
        android:layout_alignEnd="@+id/textViewGithubLink" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Draw"
        android:id="@+id/buttonDrawMatches"
        android:onClick="drawMatches"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/editTextMatchesToDraw"
        android:layout_above="@+id/buttonDrawMatches"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restartGame"
        android:id="@+id/buttonRestartGame"
        android:onClick="restartGame"
        android:layout_below="@+id/buttonDrawMatches"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/jxsl13_sixteendp"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textViewDescription"
        android:layout_below="@+id/textViewYourOpponentDrew"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/githubLink"
        android:id="@+id/textViewGithubLink"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true" />
</RelativeLayout>