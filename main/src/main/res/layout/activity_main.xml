<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewMatchesLeft"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="Test" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="test"
        android:id="@+id/textViewYouDrew"
        android:layout_below="@+id/textViewMatchesLeft"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/jxsl13_sixteendp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="test"
        android:id="@+id/textViewYourOpponentDrew"
        android:layout_below="@+id/textViewYouDrew"
        android:layout_alignLeft="@+id/textViewYouDrew"
        android:layout_alignStart="@+id/textViewYouDrew"
        android:layout_marginTop="@dimen/jxsl13_sixteendp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Draw"
        android:id="@+id/buttonDrawMatches"
        android:onClick="drawMatches"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/buttonRestartGame"
        android:layout_alignEnd="@+id/buttonRestartGame"
        android:layout_alignLeft="@+id/buttonRestartGame"
        android:layout_alignStart="@+id/buttonRestartGame" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/editTextMatchesToDraw"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="restartGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restartGame"
        android:id="@+id/buttonRestartGame"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/abc_action_bar_default_height" />
</RelativeLayout>